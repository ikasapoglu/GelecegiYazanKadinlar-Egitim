        app:layout_constraintTop_toBottomOf="@+id/img_filmm" />

    <TextView
        android:id="@+id/txt_filmSeanss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txt_filmFiyat"
        app:layout_constraintStart_toStartOf="@+id/txt_filmmAdi"
