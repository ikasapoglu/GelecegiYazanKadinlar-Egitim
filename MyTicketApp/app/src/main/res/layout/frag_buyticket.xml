    <TextView
        android:id="@+id/txt_filmFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_buy"
        app:layout_constraintStart_toStartOf="@+id/txt_filmSeanss"
        app:layout_constraintTop_toBottomOf="@+id/txt_filmSeanss" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="141dp"
        android:layout_height="49dp"
        android:layout_marginBottom="103dp"
        android:background="@color/design_default_color_primary"
        android:text="SatÄ±n Al"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_filmFiyat" />
</android.support.constraint.ConstraintLayout>