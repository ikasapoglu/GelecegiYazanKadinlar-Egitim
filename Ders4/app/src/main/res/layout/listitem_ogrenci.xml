<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_profil"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/stone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ogrencisim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:text="Placeholder Ogrenci İsim"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_profil"
        app:layout_constraintTop_toTopOf="@+id/iv_profil" />

    <TextView
        android:id="@+id/tv_okuladi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Placeholder Okul İsim"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profil"
        app:layout_constraintStart_toEndOf="@+id/iv_profil"
        app:layout_constraintTop_toTopOf="@+id/iv_profil" />


</android.support.constraint.ConstraintLayout>